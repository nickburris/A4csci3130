{
  "rules": {
    ".read": "true",
    ".write": "true",
    "businesses": {
      "$business": {
        "businessNumber": {
          ".validate": "newData.isString() && newData.val().matches(/[\\d]{9}/)"
        },
        "name": {
          ".validate": "newData.isString() && newData.val().length >= 2 && newData.val().length <= 48"
        },
        "primaryBusiness": {
          ".validate": "newData.isString() && newData.val().matches(/Fisher|Distributor|Processor|Fish Monger/i)"
        },
        "address": {
          ".validate": "newData.isString() && newData.val().length < 50"
        },
        "province": {
          ".validate": "newData.isString() && newData.val().matches(/AB|BC|MB|NB|NL|NS|NT|NU|ON|PE|QC|SK|YT|\\s/i)"
        }
      }
    }
  }
}